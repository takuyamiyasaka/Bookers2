<body>
<p class="notice"><%= flash[:notice]%></p>
<h1>Books</h1>
<table width=100%>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<span><%= book.title %></span>
			</td>
			<td>
				<span><%= book.body %></span>
			</td>
			<td>
				<%=link_to "Show",book_path(book.id)%>
				<%=link_to "Edit",edit_book_path(book.id)%>
				<%=link_to "Destroy",book_path(book.id), method: :delete,"data-confirm"=>"Are you sure?"%>
			</td>
		</tr>
	</tbody>
	<% end %>
</table>
<h2>New book</h2>
<% if @book.errors.any? %>
<div class="alert alert-warning">
	<h2><%= @book.errors.count %></h2>
	<ul>
		<% @book.errors.full_messages.each do |message|%>
		<li><%= message %></li>
		<%end%>
	</ul>
</div>
<%end%>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<div>
<%= f.submit "Createbook" %>
</div>
<% end %>
</body>